
template(name="short_contact_details")
  +bs_form_group same_ctx display="inline" show_remove_btn=false
    with same_ctx crunch_label_with_placeholder=true show_remove_btn=true
      .row
        .col-sm-3
          +bs_input same_ctx field="name" 
        .col-sm-3
          +bs_input same_ctx field="job_title"


template(name="horsey_test")
  .container-fluid
    form.form
      +bs_form action=action schema=schemas.Submissions schema_selector=schema_selector
        +bs_autocomplete
          +bs_input field="title" 
          +bs_input field="submitter_id"
template(name="dependent_edit_test")
  h2 Credits
  .well Add people, agencies and team members alike, who you want to give credit for their involvement in this work
  +bs_form same_ctx action=action schema_selector=schema_selector
    +bs_autocomplete
      +people_role_list same_ctx field='credit_contacts'
    .well.col-md-12
      .pull-right
        button.btn.btn-lg.btn-primary
          | Continue 
      .clearfix
    +submit_continue_btn
template(name='people_role_list')
      // Note that the field argument must be supplied to the tmpl
      +bs_list
          with same_ctx show_remove_btn=false 
            .row
              .col-md-2
                if is_first
                  label(for="entry-number") Entry#
                .form-inline
                  #entry-number.form-control-static
                    |Nr. #{entry_number}
                  if show_remove
                    button.btn.btn-default.btn-remove(class=btn_remove_disabled_class)
                      .glyphicon.glyphicon-trash

              .col-md-6
                +bs_autocomplete 
                  +bs_form_group same_ctx field=role_field_name form_picker=true  
                    if is_first
                      +bs_label    
                    +bs_input
                    +bs_help_block
              .col-md-4
                +bs_link same_ctx field= link_field_name
                  +bs_form_group same_ctx field= 'name'
                    if is_first
                      +bs_label 
                    +bs_input
                    +bs_help_block

