template(name="SubmissionsCandidateEditFilesUpload")
  h1 Files Upload
  //+file_uploader

  //with file
    ul.list-group
    each .
      with FS.GetFile "submission_files" _id
        li.list-group-item.row
          
          .col-md-6
            .glyphicon.glyphicon-file
            | #{name}
            img(src="{{this.url store='thumbnails'}}")
          .col-md-4
            unless isUploaded
              +FS.UploadProgressBar
          .col-md-2
            .pull-right
              .label.label-default #{humanize_filesize}
              +fs_deletebutton
                .btn.btn-warning.btn-sm
                  .glyphicon.glyphicon-trash
            .clearfix
  +file_management
template(name="fs_deletebutton")
  +UI.contentBlock
template(name="file_handling")

template(name="file_management")
  +debug_form_wrapper
    +bs_form schema_selector=non_draft_selector action=save_as_draft_action collection='submissions' id=params.id
      +bs_list same_ctx field='files'
          .well
            +bs_link same_ctx field='files.$.file_id'
              +file_uploader
            .col-md-4
              with same_ctx field='files.$.is_case_file'
                +bs_switch
            .col-md-12
              with same_ctx field='files.$.translation'
                +bs_label 
                +bs_woofmark
                +bs_help_block
            .clearfix
      .row
        +form_help_block
        +submit_continue_btn
        .clearfix
