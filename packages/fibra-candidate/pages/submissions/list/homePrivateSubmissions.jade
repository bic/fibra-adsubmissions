
template(name="account_alerts")
  if show_profile_alert
    .alert.alert-warning
      .glyphicon.glyphicon-warning-sign
      | Please don't forget to enter your invoicing data and Agency/Freelancer details in the 
      a(href='{{pathFor "user_settings"}}')
        code
            |#{userEmail}
            .glyphicon.glyphicon-chevron-right
            |Settings
      |menu!
      .btn.btn-xs.btn-default.pull-right.do-dismiss Dismiss
      .clearfix
template(name="homePrivateSubmissions")
  
  h1 Current Submissions
  
  +account_alerts
  with submission_list  
    ul.list-group
      each .
        +submission_link
  else
    .well
      | You have no Current submissions.
      .pull-right
          a.btn.btn-primary.btn-lg(href="/submissions/candidate_edit/basics")
            .glyphicon.glyphicon-plus
            | Add a Submission
      .clearfix
  if has_trashed_items
    .btn.btn-default.toggle-trashed
      |#{trash_btn_label}
  +new_submission
template(name="new_submission")
  a.btn.btn-lg.btn-primary.pull-right(href= "{{pathFor 'submissions.candidate_edit.basics' id='new'}}" )
    .glyphicon.glyphicon-plus
    | Add a submission
  .clearfix

template(name="submission_link")
    li.list-group-item
      .col-md-5
        a(href= "{{pathFor edit_link data=edit_data}}" class=link_classes)
          if trashed
            s #{title}
          else
            |#{title}
      .col-md-2
        .btn.btn-default.do-show-preview.pull-right
          |Preview
      .col-md-3
        if has_review
          +review_message_btn
        else 
          +submit_for_review_btn
        

      .col-md-2
        if trashed
          .btn.btn-default.pull-right.do-untrash
            | Reinstate
        else
          .btn.btn-default.pull-right.do-trash
            .glyphicon.glyphicon-trash
        if trashed
          .pull-right.label.label-default Trashed
        else if draft
          .pull-right.label.label-default draft
        .clearfix
      .clearfix
template(name="submit_for_review_btn")
    if review_requested
      .label.label-info Submitted for review #{review_request_time}
      unless retract_confirm
        .btn.btn-default.btn-sm.do-confirm-unrequest-review
          | Retract Submission
      else
        table.table.table-condensed
          tbody
            tr.warning
              td(colspan="3") Retract review request?
            tr
              td
                .btn.btn-default.btn-sm.do-unconfirm-unrequest-review
                  | No
              td
              td
                .btn.btn-danger.btn-sm.do-unrequest-review
                  | Yes
        
    else
      .btn.btn-primary.do-request-review
        if btn_label
          |#{btn_label}
        else
          | Submit for Review

template(name="review_box_with_request_for_review")
  +review_box
  with data
    +submit_for_review_btn same_ctx btn_label="Send new Request for Review"
template(name='review_message_btn')
  .btn.do-show-messages(class=review_btn_class)
    | FIBRA Review Messages





