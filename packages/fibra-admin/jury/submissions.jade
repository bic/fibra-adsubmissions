  dl.dl-horizontal.abbreviations
    dt.label.label-default 
      em x/y 
    dd 
      em x
      |reviewed 
      em y 
      |total
    dt.label.label-default  x SL
    dd # of works in shortlist
    dt.label.label-default  
      em x
      |b
    dd # of bronze awards 
    dt.label.label-default  
      em x
      |s
    dd # of siver
    dt.label.label-default  
      em x
      |g
    dd # of gold
    dt.label.label-default
      em x 
      |GF
    dd # of grand FIBRA awards (target: around 1/cat)
    dt
      .glyphicon.glyphicon-sort-by-order
      |,
      .glyphicon.glyphicon-sort-by-order-alt
    dd sort by grade ascending, descending

template(name='jury_submissions_list')
  h1 Submission List
  


  //.col-md-12
    with filter=filter
      
      .btn-group
        +review_filter
        +numeric_sort_option query_options=query_options name='last_review'
      .btn-group
        +request_for_review_filter
        +numeric_sort_option query_options=query_options name='review_request'
      .btn-group
        +brand_filter
        +alpha_sort_option query_options=query_options name='brand'
      .btn-group
        +title_filter
        +alpha_sort_option query_options=query_options name='title'
      .btn-group
        +contact_filter
        +alpha_sort_option query_options=query_options name='submitter_contact.name'
      +is_trashed
        
      
      with same_ctx fields=fields_ref
        .input-group
          .input-group-btn
            +field_selector
          +tags_filter
  with filter=filter
    .col-md-6
      .well
        h5 Abbreviations
        +abbreviations
      +category_selector
    .col-md-6
      .col-md-8
          +evaluated_filter
          +show_hide_others
      if debug
        .col-md-6
          pre #{filter_json}
        .col-md-6
          pre #{query_options_json}
      .col-md-12
        with submissions 
          h3 
            .label.label-default #{count} entries
          each .
            +jury_submission_widget data=. filter=compiled_filter fields=widget_force_fields state=jury_submission_widget_state
template(name="show_hide_others")
  .btn.btn-default.btn-lg.do-toggle-others #{label}
template(name="jury_submission_widget")
  .panel.panel-default.submission-widget
    .panel-heading
      with data
        h4.col-md-9 
          if trashed
            strike
              |#{submission_name}
            .label.label-default Trashed
          else
           |#{submission_name}
        .col-md-3
          .btn.btn-default.do-preview View
          //.btn.btn-default.do-edit Edit 
      .col-md-12
        +grading_widget 
      .col-md-12
        each labels
          .label(class=label_class) #{label}
      .clearfix    

    with display_fields
      .panel-body
        dl
          each . 
            dt #{field_name}
            dd 
              each field_value_bits
                if value
                  if highlight
                    mark #{value}
                  else
                    |#{value}
                else
                  .label.label-default Not Set
              if show_more_btn
                .btn.btn-xs.btn-default
                  |More...




